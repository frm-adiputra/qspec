{{define "QUERY_ROWS"}}
// {{.Name}} {{.Description}}
func {{.Name}}({{.ParamsDeclaration}}) ([]{{.ReturnType}}, error) {
	{{- if and .IsUsingParamsStruct .IsUsingParamsStructValidations -}}
	err := params.Validate()
	if err != nil {
		return nil, err
	}
	{{end}}
	var a []{{.ReturnType}}
	rows, err := getDB().Query(_{{.Name}}Stmt {{if .ParamsUsage}}, {{.ParamsUsage}} {{end}})
	if err != nil {
		return nil, err
	}
	defer rows.Close()

	for rows.Next() {
		var v {{.ReturnType}}
		if err := rows.Scan({{.RowScan}}); err != nil {
			return nil, err
		}
		a = append(a, v)
	}
	if err := rows.Err(); err != nil {
		return nil, err
	}

	return a, nil
}

